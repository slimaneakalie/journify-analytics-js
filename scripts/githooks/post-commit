commit_message=$(git show --no-patch --format=%B)

majorRegex='\[MAJOR\]\ .+'
minorRegex='\[MINOR\]\ .+'
patchRegex='\[PATCH\]\ .+'
new_version="false"

if [[ $commit_message =~ $majorRegex ]]; then
  npm run major-version
  new_version="true"
elif [[ $commit_message =~ $minorRegex ]]; then
  npm run minor-version
  new_version="true"
elif [[ $commit_message =~ $patchRegex ]]; then
  npm run patch-version
  new_version="true"
fi

if [[ $new_version == "true" ]]; then
  current_version=$(node -p "require('./package.json').version")
  git tag -a v$current_version -m $commit_message
fi
